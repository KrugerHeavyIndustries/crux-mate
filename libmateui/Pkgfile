# Description: MATE project UI library
# Maintainer: Chris Kruger
# Group: mate
# Depends on: libmatecomponentui libmatekeyring intltool

name=libmateui
base=1.2
version=1.2.0
release=2
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr \
	--localstatedir=/var --disable-static \
	--libexecdir=/usr/lib/libmateui 
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/{gtk-doc,locale}
}
