# Description: A documentation metadata library
# Maintainer: Chris Kruger
# Group: mate

name=rarian
version=0.8.1
release=1
source=(http://rarian.freedesktop.org/Releases/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=/usr \
		--localstatedir=/var
	make
	make DESTDIR=$PKG install
}
