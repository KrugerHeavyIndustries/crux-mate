# Description: MATE project File Manager
# Maintainer: Chris Kruger
# Group: mate
# Depends on: mate-desktop shared-mime-info intltool glib pango gtk libunique gvfs

name=mate-file-manager
version=1.6.1
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:3}/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr \
		--mandir=/usr/man \
		--disable-static \
		--libexecdir=/usr/lib/$name \
		--disable-update-mimedb
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/{gtk-doc,locale}
}
