# Description: Window Navigator Construction Kit for MATE
# Maintainer: Chris Kruger
# Group: mate
# Depends on: mate-common, gtk-doc, gobject-introspection, startup-notification, gtk

name=libmatewnck
version=1.4.0
release=1
source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {
	cd $name-$version
	sed -i -e 's/AM_CONFIG_HEADER/AC_CONFIG_HEADERS/' configure.ac
	./autogen.sh --prefix=/usr \
		--disable-gtk-doc \
		--disable-nls
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/{gtk-doc,locale}
}
