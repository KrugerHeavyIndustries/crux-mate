# Description: MATE project library
# Maintainer: Chris Kruger
# Group: mate
# Depends on: mate-common mate-conf mate-vfs libmatecomponent intltool glib libcanberra

name=libmate
base=1.4
version=1.4.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz $name-$version.patch)
	

build() {
	patch -p0 < $name-$version.patch
	cd $name-$version
	./autogen.sh --prefix=/usr \
	--mandir=/usr/man \
	--localstatedir=/var --disable-static \
	--libexecdir=/usr/lib/libmate  --disable-esd
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/{gtk-doc,locale}
}
