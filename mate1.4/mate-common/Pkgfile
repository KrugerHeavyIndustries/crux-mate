# Description: A collection of common utilities for the MATE project
# Maintainer: Chris Kruger
# Group: mate

name=mate-common
base=1.4
version=1.4.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz mate-autogen.patch)

build() {
	cd $name-$version
	patch -p1 -i $SRC/mate-autogen.patch
	./autogen.sh --prefix=/usr \
		--mandir=/usr/man
	make
	make DESTDIR=$PKG install
}
