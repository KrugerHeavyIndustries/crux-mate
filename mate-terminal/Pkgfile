# Description: MATE project Terminal Emulator
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool gtk glib vte dconf

name=mate-terminal
version=1.6.1
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:3}/$name-$version.tar.xz)

build() {
	cd $name-$version
    NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr \
        --disable-static \
        --disable-scrollkeeper \
        --with-gnu-ld
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/locale
}
