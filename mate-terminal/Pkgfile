# Description: MATE project Terminal Emulator
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool gtk glib vte

name=mate-terminal
base=1.4
version=1.4.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr --sysconfdir=/etc \
	--localstatedir=/var \
	--disable-static \
	--disable-scrollkeeper \
	--with-gnu-ld
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/locale
}
