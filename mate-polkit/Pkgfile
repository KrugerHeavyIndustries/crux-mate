# Description: MATE project Policy Kit interface
# Maintainer: Chris Kruger crux-maint at krugerheavyindustries dot com
# Group: mate
# Depends on: intltool gtk gtk-doc polkit

name=mate-polkit
base=1.2
version=1.2.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr --sysconfdir=/etc \
	--localstatedir=/var  --libexecdir=/usr/lib/polkit-mate \
	--disable-static
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/locale
}
