# Description: MATE project Policy Kit interface
# Maintainer: Chris Kruger crux-maint at krugerheavyindustries dot com
# Group: mate
# Depends on: intltool gtk gtk-doc polkit mate-common

name=mate-polkit
version=1.6.0
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:3}/$name-$version.tar.xz)

build() {
	cd $name-$version
    NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr \
        --libexecdir=/usr/lib/$name \
        --disable-static
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/locale
}
