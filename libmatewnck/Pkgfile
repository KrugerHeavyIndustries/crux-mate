# Description: Window Navigator Construction Kit for MATE
# Maintainer: Chris Kruger
# Group: mate
# Depends on: mate-common, gtk-doc, gobject-introspection, startup-notification, gtk

name=libmatewnck
version=1.6.0
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:3}/$name-$version.tar.xz)

build() {
	cd $name-$version
    NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr \
		--disable-gtk-doc \
		--disable-nls
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/{gtk-doc,locale}
}
