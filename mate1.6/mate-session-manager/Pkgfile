# Description: MATE project Session Manager
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool gtk glib upower mate-common

name=mate-session-manager
version=1.6.0
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:3}/$name-$version.tar.xz \
	start-mate)

build() {
	cd $name-$version
    NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr \
        --mandir=/usr/man \
        --libexecdir=/usr/lib/$name \
        --enable-splash
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/locale

	install -o root -g root -m 0755 $SRC/start-mate $PKG/usr/bin/
}
