# Description: MATE project Notification Daemon
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool gtk glib libmatewnck libcanberra libnotify

name=mate-notification-daemon
version=1.6.0
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:3}/$name-$version.tar.xz)

build() {
	cd $name-$version
    NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr \
        --disable-static \
        --libexecdir=/usr/lib/$name
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/locale
}
