# Description: MATE project Menus
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool gobject-introspection mate-common

name=mate-menus
version=1.6.0
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:3}/$name-$version.tar.xz)

build() {
	cd $name-$version
	#sed -i -e 's/AM_CONFIG_HEADER/AC_CONFIG_HEADERS/' configure.ac
    NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr \
        --disable-static
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/locale
}
