# Description: A collection of documentation utilities for the MATE project
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool libxml2 libxslt rarian libxml2-python gtk-doc mate-common

name=mate-doc-utils
version=1.6.1
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:3}/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
		--mandir=/usr/man \
		--disable-scrollkeeper
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/locale
}
