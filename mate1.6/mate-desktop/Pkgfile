# Description: MATE project GUI Dialogs
# Maintainer: Chris Kruger
# Group: mate
# Depends on: gdk-pixbuf gtk intltool gtk-doc mate-doc-utils

name=mate-desktop
version=1.6.1
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:3}/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
        --mandir=/usr/man \
        --disable-static \
        --disable-scrollkeeper
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/{gtk-doc,locale}
}
