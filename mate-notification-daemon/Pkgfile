# Description: MATE project Notification Daemon
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool mate-conf gtk glib libmatewnck libcanberra libmatenotify

name=mate-notification-daemon
base=1.4
version=1.4.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr \
	--localstatedir=/var --disable-static \
	--libexecdir=/usr/lib/mate-notification-daemon
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/locale
}
