# Description: An implementation of the XDG Sound Theme and Name Specification
# Maintainer: Chris Kruger
# Group: mate
# Depends on: libvorbis gtk alsa-lib

name=libcanberra
version=0.29
release=2
source=(http://0pointer.de/lennart/projects/$name/$name-$version.tar.xz)
	

build() {
	cd $name-$version
	./configure --prefix=/usr \
	--disable-oss
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/{gtk-,}doc
}
