# Description: MATE project Crypto Key Management
# Maintainer: Chris Kruger
# Group: mate
# Depends on: mate-conf intltool glib libtasn1 gtk

name=mate-keyring
base=1.4
version=1.4.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr \
	--localstatedir=/var --disable-static \
	--libexecdir=/usr/lib/mate-keyring \
	--with-pam-dir=/lib/security --with-root-certs=/etc/ssl/certs
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/{gtk-doc,locale}
}
