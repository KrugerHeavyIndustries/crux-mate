# Description: The GObject Introspection is used to describe program APIs 
# Maintainer: Chris Kruger
# Group: mate
# Depends on: glib

name=gobject-introspection
version=1.32.1
release=1.32
source=(http://ftp.gnome.org/pub/gnome/sources/$name/$release/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
	--mandir=/usr/man \
	--disable-tests \
	--disable-static
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/gtk-doc
}
