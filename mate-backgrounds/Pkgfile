# Description: MATE project desktop backgrounds
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool glib mate-common

name=mate-backgrounds
version=1.6.0
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:3}/$name-$version.tar.xz)

build() {
	cd $name-$version
    NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/locale
}
