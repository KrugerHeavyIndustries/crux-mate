# Description: CORBA library supporting MATE desktop system
# Maintainer: Chris Kruger
# Group: mate
# Depends on: mate-common glib libidl gtk-doc

name=mate-corba
base=1.4
version=1.4.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	sed -i -e 's,$(srcdir)/test.sh,test/everything/test.sh,' \
		test/everything/Makefile.am
	./autogen.sh --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/gtk-doc
}
