# Description: CORBA library supporting MATE desktop system
# Maintainer: Chris Kruger
# Group: mate
# Depends on: mate-common glib libidl gtk-doc

name=mate-corba
version=1.2.2
release=1.2
source=(http://pub.mate-desktop.org/releases/$release/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/gtk-doc
}
