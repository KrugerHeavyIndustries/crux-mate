# Description: The MATE configuration editor
# Maintainer: Chris Kruger
# Group: mate
# Depends on:

name=mate-conf-editor
base=1.2
version=1.2.0
release=2
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr \
	--libdir=/usr/lib/mate-conf-editor \
	--localstatedir=/var \
	--disable-scrollkeeper \
	--disable-schemas-install
	make
	make DESTDIR=$PKG install
}
