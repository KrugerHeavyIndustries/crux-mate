# Description: Right-click "Open terminal" extension for caja
# Maintainer: Chris Kruger
# Group: mate
# Depends on: mate-common mate-file-manager

name=mate-file-manager-open-terminal
version=1.6.0
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:3}/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/{gtk-doc,locale}
}
