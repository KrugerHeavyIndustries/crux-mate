# Depends on: polkit gtk

name=mate-polkit
version=1.8.0
release=1
source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {
    cd $name-$version
    ./configure --prefix=/usr \
        --libexecdir=/usr/lib/$name \
        --disable-nls
    make
    make DESTDIR=$PKG install

    rm -r $PKG/usr/share/locale
}
