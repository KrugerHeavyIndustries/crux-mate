# Description: MATE project Themes
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool gtk-engines 

name=mate-themes
base=1.2
version=1.2.2
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr --sysconfdir=/etc \
	--localstatedir=/var 
	make
	make DESTDIR=$PKG install
}
