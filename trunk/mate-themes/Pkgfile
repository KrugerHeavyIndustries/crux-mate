# Depends on: gtk-engines gtk-engine-murrine icon-naming-utils

name=mate-themes
version=1.8.0
release=1
source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {
    cd $name-$version
    ./configure --prefix=/usr \
        --disable-nls
    make
    make DESTDIR=$PKG install

    rm -r $PKG/usr/share/locale
}
