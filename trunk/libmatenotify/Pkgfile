# Description: MATE project notifications support library
# Maintainer: Chris Kruger
# Group: mate
# Depends on: gtk glib dbus-1 dbus-glib-1

name=libmatenotify
base=1.2
version=1.2.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr --disable-static 
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share
}
