# Description: A collection of documentation utilities for the MATE project
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool libxml-2.0 libxslt rarian gtk-doc

name=mate-doc-utils
version=1.2.1
release=1.2
source=(http://pub.mate-desktop.org/releases/$release/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr --sysconfdir=/etc \
		--mandir=/usr/share/man --localstatedir=/var \
		--disable-scrollkeeper
	make
	make DESTDIR=$PKG install
}
