# Description: MATE project library
# Maintainer: Chris Kruger
# Group: mate
# Depends on: mate-common mate-conf mate-vfs libmatecomponent intltool glib gmodule libcanberra

name=libmate
base=1.2
version=1.2.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)
	

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr --sysconfdir=/etc \
	--mandir=/usr/man \
	--localstatedir=/var --disable-static \
	--libexecdir=/usr/lib/libmate  --disable-esd
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/{gtk-doc,locale}
}
