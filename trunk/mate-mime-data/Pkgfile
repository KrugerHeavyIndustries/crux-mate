# Description: MATE project mime data 
# Maintainer: Chris Kruger
# Group: mate
# Depends on: mate-common shared-mime-info intltool

name=mate-mime-data
base=1.2
version=1.2.2
release=2
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)
	

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr \
	--localstatedir=/var 
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/locale
}
