# Description: MATE project Crypto Key Management Library
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool glib libgcrypt gtk-doc

name=libmatekeyring
base=1.2
version=1.2.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr --sysconfdir=/etc \
	--localstatedir=/var --disable-static \
	--libexecdir=/usr/lib/mate-keyring
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/{gtk-doc,locale}
}
