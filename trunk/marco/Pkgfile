# Depends on: libcanberra mate-dialogs xorg-libxdamage

name=marco
version=1.8.2
release=1
source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {
    cd $name-$version
    ./configure --prefix=/usr \
        --mandir=/usr/man \
        --disable-nls
    make
    make DESTDIR=$PKG install

    rm -r $PKG/usr/share/locale
}
