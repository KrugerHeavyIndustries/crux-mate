# Description: MATE project Session Manager
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool gtk glib upower mate-common mate-conf

name=mate-session-manager
base=1.4
version=1.4.0
release=2
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz \
	start-mate)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr \
	--mandir=/usr/man \
	--localstatedir=/var \
	--libexecdir=/usr/lib \
	--enable-splash
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/locale

	install -o root -g root -m 0755 $SRC/start-mate $PKG/usr/bin/
}
