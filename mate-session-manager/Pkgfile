# Description: MATE project Session Manager
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool gtk glib gio dbus-glib-1 upower

name=mate-session-manager
base=1.2
version=1.2.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr --sysconfdir=/etc \
	--mandir=/usr/man \
	--localstatedir=/var \
	--libexecdir=/usr/lib \
	--enable-splash
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/locale
}
