# Description: MATE project GUI Dialogs
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool setup-notification Xlib

name=mate-desktop
base=1.2
version=1.2.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr --sysconfdir=/etc \
	--localstatedir=/var --disable-static --disable-scrollkeeper
	make
	make DESTDIR=$PKG install
}
