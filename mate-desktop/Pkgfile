# Description: MATE project GUI Dialogs
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool gtk-doc mate-conf mate-doc-utils

name=mate-desktop
base=1.2
version=1.2.0
release=2
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr \
	--mandir=/usr/man \
	--localstatedir=/var --disable-static --disable-scrollkeeper
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/{gtk-doc,locale}
}
