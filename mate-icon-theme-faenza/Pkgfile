# Description: MATE project Theme Icons 
# Maintainer: Chris Kruger
# Group: mate
# Depends on: mate-common

name=mate-icon-theme-faenza
version=1.6.0
release=1
source=(http://pub.mate-desktop.org/releases/${version:0:3}/$name-$version.tar.xz)

build() {
	cd $name-$version
	NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr 
	make
	sed -i -e 's,$(mkdir_p),mkdir -p,g' Makefile
	make DESTDIR=$PKG install
}
