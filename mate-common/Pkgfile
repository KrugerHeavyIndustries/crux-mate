# Description: A collection of common utilities for the MATE project
# Maintainer: Chris Kruger
# Group: mate

name=mate-common
version=1.6.1
release=2
source=(http://pub.mate-desktop.org/releases/${version:0:3}/$name-$version.tar.xz \
    mate-autogen.patch)

build() {
    cd $name-$version
    patch -p1 -i $SRC/mate-autogen.patch
    ./configure --prefix=/usr \
        --mandir=/usr/man
    make
    make DESTDIR=$PKG install
}
