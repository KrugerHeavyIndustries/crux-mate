# Description: The MATE configuration editor
# Maintainer: Chris Kruger
# Group: mate
# Depends on:

name=mate-conf-editor
version=1.2.0
release=1.2
source=(http://pub.mate-desktop.org/releases/$release/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr \
	--libdir=/usr/lib/mate-conf-editor \
	--localstatedir=/var \
	--sysconfdir=/etc \
	--disable-scrollkeeper \
	--disable-schemas-install \
	--with-mateconf-source="xml::/etc/mateconf/mateconf.xml/defaults" \
	--with-gconf-mandatory-source="xml::/etc/mateconf/mateconf.xml.mandatory" 
	make -j 4
	make DESTDIR=$PKG install
}
