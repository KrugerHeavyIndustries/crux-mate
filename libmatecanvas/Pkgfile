# Description: MATE project CANVAS library
# Maintainer: Chris Kruger
# Group: mate
# Depends on: mate-common intltool glib gtk gail libart_lgpl libglade pango pangoft2

name=libmatecanvas
base=1.2
version=1.2.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr --disable-static \
	--enable-glade
	make
	make DESTDIR=$PKG install
}
