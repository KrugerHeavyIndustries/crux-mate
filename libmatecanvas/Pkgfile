# Description: MATE project CANVAS library
# Maintainer: Chris Kruger
# Group: mate
# Depends on: mate-common intltool glib gtk libart_lgpl libglade pango gtk-doc

name=libmatecanvas
base=1.4
version=1.4.0
release=1
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr --disable-static \
	--enable-glade
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share
}
