# Description: MATE project keyboard support library
# Maintainer: Chris Kruger
# Group: mate
# Depends on: intltool glib libxklavier mate-conf

name=libmatekbd
base=1.2
version=1.2.0
release=2
source=(http://pub.mate-desktop.org/releases/$base/$name-$version.tar.xz)

build() {
	cd $name-$version
	./autogen.sh --prefix=/usr
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/locale
}
