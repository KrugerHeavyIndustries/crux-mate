# Depends on: p11-kit intltool glib gtk3 libgcrypt

name=gcr
version=3.12.2
release=1
source=(http://download.gnome.org/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
    cd $name-$version
    ./configure --prefix=/usr \
        --disable-nls \
        --disable-vala
    make
    make DESTDIR=$PKG install

    rm -r $PKG/usr/share/{gtk-doc,locale}
}
